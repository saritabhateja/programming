public class Solution {
    public String addBinary(String a, String b) {
       String result ="";
       int i = a.length()-1, j = b.length()-1;
       int c = 0, sum =0;
       
       while(i>=0 || j>=0 || c!=0)
       {
           sum = ((i>=0)?a.charAt(i)-'0':0) + ((j>=0)?b.charAt(j)-'0':0) + c;
           result = (char)(sum % 2 + '0') + result;
           c = sum/2;
           i--;
           j--;
       }
       return result;
    }
}
